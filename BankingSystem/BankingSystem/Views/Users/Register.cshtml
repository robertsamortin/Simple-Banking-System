@model Users
@{
    ViewData["Title"] = "Register";
}

<div>
    <h2>Register</h2>
    <h4>New user</h4>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginName" class="control-label"></label>
                <input asp-for="LoginName" class="form-control" id="LoginName" onchange="UserCheck()" />
                <span asp-validation-for="LoginName" class="text-danger" id="LoginNameVal"></span>
                <span id="Status" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-default" id="btnRegister"/>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-controller="Users" asp-action="Login">Cancel</a>
</div>

<script>
    function UserCheck() {
        $("#btnRegister").attr("disabled", "disabled");
        var lName = $("#LoginName").val();

        if (lName == "") {
            $("#Status").hide();
        }
        else {
            $("#Status").show();
            $.ajax({
            type: 'POST',
            data: {
                LoginName: lName
            },
            url: '@Url.Action("CheckLogInName", "Users")',
            success: function (data) {
                if (LoginName != "") {
                    if (data) {
                        $("#Status").html('<font color="Red">That name is taken.Try Another.</font>');
                        $("#LoginName").css("border-color", "Red");
                        $("#btnRegister").attr("disabled", "disabled");
                    }

                    else {
                        $("#Status").html('<font color="Green">Available !. you can take it.</font>');
                        $("#LoginName").css("border-color", "Green");
                        $("#btnRegister").removeAttr("disabled");
                    }
                }
            }
        });
        }


    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
