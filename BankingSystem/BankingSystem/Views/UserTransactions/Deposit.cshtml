@model UserTransactions

@{
    ViewData["Title"] = "Deposit";
}
@{
    var id = Model.ID;
 }
<div>
    <h2>Deposit</h2>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Deposit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Available Balance: </label>
                <label>@String.Format("{0:N2}", Model.Balance)</label>

            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
                <div class="form-group">
                    @Html.ValidationMessage("Error")
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Deposit" class="btn btn-primary btn-md" />
                <a class="btn btn-default btn-md" asp-controller="UserTransactions" asp-action="Index" asp-route-id="@Model.ID">Cancel</a>
            </div>
        </form>
    </div>
</div>
